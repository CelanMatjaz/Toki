{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Launch Sandbox - Debug",
            "type": "cppdbg",
            "request": "launch",
            "stopAtEntry": false,
            "MIMode": "gdb",
            "cwd": "${workspaceFolder}",
            "args": ["${workspaceFolder}/toki_sandbox"],
            "linux": {
                "program": "${workspaceFolder}/build/build/bin/Linux-x86_64/Debug/Sandbox"
            },
            "windows": {
                "program": "${workspaceFolder}/build/build/bin/Windows-x86_64/Debug/Sandbox"
            },
            "preLaunchTask": "Build Sandbox - Debug"
        }
    ]
}
