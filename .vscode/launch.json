            "preLaunchTask": "Build Sandbox - Debug"
        },
        {
            "name": "Test - Debug",
            "type": "cppdbg",
            "request": "launch",
            "stopAtEntry": false,
            "MIMode": "gdb",
            "cwd": "${workspaceFolder}",
            "args": ["${workspaceFolder}/toki_sandbox"],
            "program": "${workspaceFolder}/build/tests/tests",
            "preLaunchTask": "Build Tests - Debug"
        }
    ]
}
