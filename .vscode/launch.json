            "args": ["${workspaceFolder}/toki_sandbox"],
            "program": "${workspaceFolder}/build/local/bin/threadding_sandbox",
            "preLaunchTask": "Build Sandbox - Debug"
        },
        {
            "name": "Test - Debug",
            "type": "cppdbg",
            "request": "launch",
            "stopAtEntry": false,
            "MIMode": "gdb",
            "cwd": "${workspaceFolder}",
